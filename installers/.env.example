# AUDITORIA360 Environment Configuration Template
# Copy this file to .env.local and adjust the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neon PostgreSQL Database (Primary)
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/auditoria360?sslmode=require
NEON_DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/auditoria360?sslmode=require

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# =============================================================================
# STORAGE CONFIGURATION (Cloudflare R2)
# =============================================================================

# Cloudflare R2 Storage (S3-compatible)
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ENDPOINT_URL=https://account_id.r2.cloudflarestorage.com
R2_BUCKET_NAME=auditoria360-storage
R2_REGION=auto

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xlsx,csv,txt

# =============================================================================
# AI & ML CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# PaddleOCR Configuration
PADDLE_OCR_USE_GPU=false
PADDLE_OCR_LANG=pt

# Prefect Configuration
PREFECT_API_URL=https://api.prefect.cloud/api/accounts/your-account-id/workspaces/your-workspace-id
PREFECT_API_KEY=pnu_your_prefect_api_key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# API Security
API_RATE_LIMIT=100/minute
API_KEY_HEADER=X-API-Key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Notification Services (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your/teams/webhook

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# DuckDB Configuration
DUCKDB_DATABASE_PATH=data/analytics.duckdb
DUCKDB_MEMORY_LIMIT=2GB

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================

# Development Database (SQLite fallback)
DEV_DATABASE_URL=sqlite:///./dev_auditoria360.db

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test_auditoria360.db
TESTING=false

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
FEATURE_AI_CHATBOT=true
FEATURE_OCR_PROCESSING=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_AUDIT_LOGGING=true

# =============================================================================
# LEGACY COMPATIBILITY (if needed)
# =============================================================================

# Google Cloud (Legacy - for migration purposes only)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# BigQuery (Legacy - for data migration)
# BIGQUERY_DATASET=auditoria_legacy
# BIGQUERY_TABLE_PREFIX=legacy_