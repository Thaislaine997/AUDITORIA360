# AUDITORIA360 Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Security Configuration (CRITICAL - Change in Production)
SECRET_KEY=your_secret_key_here_minimum_32_characters_required_for_production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database


# Default User Passwords (ONLY for initial setup - change immediately)
# These are used by the database initialization script
# In production, use AWS Secrets Manager or similar secure storage
DEFAULT_ADMIN_PASSWORD=changeme_admin_password_secure_123!
DEFAULT_GESTOR_A_PASSWORD=changeme_gestor_a_password_secure_456!
DEFAULT_GESTOR_B_PASSWORD=changeme_gestor_b_password_secure_789!
DEFAULT_CLIENT_X_PASSWORD=changeme_client_x_password_secure_012!

# Development/Testing Credentials (ONLY for development)
# These are used for fallback authentication when database is not available
# REMOVE these in production or set to empty values
TEST_USERNAME=admin
TEST_PASSWORD=changeme_test_password_dev_only!

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# External Services
CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key
CLOUDFLARE_R2_BUCKET=auditoria360-bucket


# AWS Secrets Manager (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
SECRET_MANAGER_SECRET_NAME=auditoria360/credentials

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Multi-tenant Security Settings
ENABLE_TENANT_ISOLATION=true
ENFORCE_COMPANY_FILTERING=true
SESSION_TIMEOUT_MINUTES=30

# Security Headers and CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
SECURITY_HEADERS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_SENSITIVE_DATA=false