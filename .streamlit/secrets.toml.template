# üîê AUDITORIA360 - Streamlit Cloud Secrets Configuration
# This file contains production secrets for Streamlit Cloud deployment
# These values should be configured in Streamlit Cloud's secrets management

# =============================================================================
# API CONFIGURATION
# =============================================================================
[api]
base_url = "https://auditoria360-api.vercel.app"
timeout = 30
retry_attempts = 3

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
[database]
# Neon PostgreSQL Production Database
url = "postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/auditoria360?sslmode=require"
pool_size = 10
max_overflow = 20
pool_recycle = 3600

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
[auth]
jwt_secret_key = "your-super-secret-jwt-key-change-this-in-production"
jwt_algorithm = "HS256"
access_token_expire_minutes = 30

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
[storage]
# Cloudflare R2 Storage
r2_access_key_id = "your_r2_access_key_id"
r2_secret_access_key = "your_r2_secret_access_key"
r2_endpoint_url = "https://account_id.r2.cloudflarestorage.com"
r2_bucket_name = "auditoria360-storage"

[ai]
# OpenAI API for AI features
openai_api_key = "sk-your-openai-api-key-here"
openai_model = "gpt-4"
openai_max_tokens = 2048

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
[app]
environment = "production"
debug = false
log_level = "INFO"
enable_analytics = true
max_file_size = "50MB"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
[features]
ai_chatbot = true
ocr_processing = true
analytics_dashboard = true
email_notifications = true
audit_logging = true

# =============================================================================
# MONITORING
# =============================================================================
[monitoring]
enable_metrics = true
error_tracking = true
performance_monitoring = true

# Note: In production, these values should be set through Streamlit Cloud's
# secrets management interface, not stored in this file with real values