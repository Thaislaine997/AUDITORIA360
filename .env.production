# ðŸš€ AUDITORIA360 - Production Environment Configuration
# Production environment variables for Streamlit Cloud deployment

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Production API endpoint
API_BASE_URL=https://auditoria360-api.vercel.app
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Neon PostgreSQL Production Database
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/auditoria360?sslmode=require
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration for production
CORS_ORIGINS=https://auditoria360-dashboards.streamlit.app,https://auditoria360-api.vercel.app
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# STORAGE CONFIGURATION (Cloudflare R2)
# =============================================================================
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ENDPOINT_URL=https://account_id.r2.cloudflarestorage.com
R2_BUCKET_NAME=auditoria360-storage
R2_REGION=auto

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xlsx,csv,txt

# =============================================================================
# AI & ML CONFIGURATION
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# PaddleOCR Configuration
PADDLE_OCR_USE_GPU=false
PADDLE_OCR_LANG=pt

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Notification Services
ENABLE_NOTIFICATIONS=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Enable monitoring features
ENABLE_METRICS=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# DuckDB Configuration for analytics
DUCKDB_MEMORY_LIMIT=2GB

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHING=true

# API Rate Limiting
API_RATE_LIMIT=100/minute

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_CHATBOT=true
FEATURE_OCR_PROCESSING=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_AUDIT_LOGGING=true

# =============================================================================
# STREAMLIT SPECIFIC CONFIGURATION
# =============================================================================
# Streamlit server configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_ENABLE_CORS=true
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# Streamlit theming
STREAMLIT_THEME_PRIMARY_COLOR=#1e2327
STREAMLIT_THEME_BACKGROUND_COLOR=#111315
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#23272b
STREAMLIT_THEME_TEXT_COLOR=#f5f5f5

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Deployment platform
DEPLOYMENT_PLATFORM=streamlit_cloud
DEPLOYMENT_REGION=us-east-1

# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# Session configuration
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=100

# Note: This file serves as a template for production environment variables.
# In Streamlit Cloud, these should be configured through the secrets management interface.