{
  "version": 1,
  "formatters": {
    "default": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "file": {
      "class": "logging.FileHandler",
      "filename": "logs/auditoria360.log",
      "formatter": "default"
    },
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "default"
    }
  },
  "loggers": {
    "auditoria360": {
      "level": "INFO",
      "handlers": [
        "file",
        "console"
      ]
    }
  }
}