{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/dashboards",
      "status": 301,
      "headers": {
        "Location": "https://auditoria360-dashboards.streamlit.app"
      }
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(dashboard|portal_demandas|dashboards|relatorios|checklist|consultor|ccts|revisao|obrigacoes|parametros|sugestoes|benchmarking|trilha).*",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "SECRET_KEY": "@secret_key",
    "DATABASE_URL": "@database_url",
    "ENVIRONMENT": "production"
  },
  "functions": {
    "api/index.py": {
      "memory": 3008,
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/v1/automation/reports/daily",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/v1/automation/reports/weekly", 
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/v1/automation/reports/monthly",
      "schedule": "0 9 1 * *"
    },
    {
      "path": "/api/v1/automation/backup/daily",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/v1/automation/payroll/process",
      "schedule": "0 8 * * 1-5"
    }
  ]
}
