{
  "builds": [
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "SECRET_KEY": "@secret_key",
    "DATABASE_URL": "@database_url",
    "ENVIRONMENT": "production"
  },
  "functions": {
    "api/index.py": {
      "memory": 3008,
      "maxDuration": 30
    }
  },
  "regions": ["iad1", "sfo1", "lhr1"],
  "framework": null,
  "outputDirectory": "src/frontend/dist",
  "installCommand": "cd src/frontend && npm install",
  "buildCommand": "cd src/frontend && npm run build",
  "crons": [
    {
      "path": "/api/v1/automation/reports/daily",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/v1/automation/reports/weekly", 
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/v1/automation/reports/monthly",
      "schedule": "0 9 1 * *"
    },
    {
      "path": "/api/v1/automation/backup/daily",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/v1/automation/payroll/process",
      "schedule": "0 8 * * 1-5"
    }
  ]
}