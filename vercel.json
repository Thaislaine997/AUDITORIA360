{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/dashboards",
      "status": 301,
      "headers": {
        "Location": "https://auditoria360-dashboards.streamlit.app"
      }
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "SECRET_KEY": "@secret_key",
    "DATABASE_URL": "@database_url",
    "ENVIRONMENT": "production"
  },
  "functions": {
    "api/index.py": {
      "memory": 3008,
      "maxDuration": 30
    }
  }
}
